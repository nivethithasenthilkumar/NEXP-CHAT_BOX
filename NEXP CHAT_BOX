        let questionsAnswered = 0;

        // Navigation
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Remove active class from all nav links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Add active class to clicked nav link
            event.target.classList.add('active');
        }

        // Simple text preprocessing function
        function preprocessText(text) {
            return text.toLowerCase()
                      .replace(/[^\w\s]/g, ' ')
                      .replace(/\s+/g, ' ')
                      .trim()
                      .split(' ')
                      .filter(word => word.length > 2);
        }

        // Calculate similarity between user question and FAQ
        function calculateSimilarity(userWords, faqItem) {
            const faqWords = preprocessText(faqItem.question);
            const allKeywords = [...faqWords, ...faqItem.keywords];
            
            let matches = 0;
            let totalWords = userWords.length;
            
            userWords.forEach(word => {
                if (allKeywords.some(keyword => keyword.includes(word) || word.includes(keyword))) {
                    matches++;
                }
            });
            
            return totalWords > 0 ? matches / totalWords : 0;
        }

        // Find best matching FAQ
        function findBestMatch(userQuestion) {
            const userWords = preprocessText(userQuestion);
            let bestMatch = null;
            let bestScore = 0;
            
            faqDatabase.forEach(faq => {
                const score = calculateSimilarity(userWords, faq);
                if (score > bestScore) {
                    bestScore = score;
                    bestMatch = faq;
                }
            });
            
            return bestScore > 0.2 ? { faq: bestMatch, confidence: bestScore } : null;
        }

        // Add message to chat
        function addMessage(message, isUser = false) {
            const chatContainer = document.getElementById('chatContainer');
            const messageDiv = document.createElement('div');
            messageDiv.className = `flex items-start space-x-3 chat-bubble ${isUser ? 'flex-row-reverse space-x-reverse' : ''}`;
            
            const avatarClass = isUser ? 'user-avatar' : 'bot-avatar';
            const bgClass = isUser ? 'bg-blue-600 text-white' : 'bg-white border';
            const textClass = isUser ? 'text-white' : 'text-gray-800';
            const roundedClass = isUser ? 'rounded-2xl rounded-tr-md' : 'rounded-2xl rounded-tl-md';
            
            messageDiv.innerHTML = `
                <div class="${avatarClass} w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        ${isUser ? 
                            '<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>' :
                            '<path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>'
                        }
                    </svg>
                </div>
                <div class="${bgClass} ${roundedClass} px-4 py-3 shadow-sm max-w-xs">
                    <p class="${textClass} text-sm">${message}</p>
                </div>
            `;
            
            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        // Show typing indicator
        function showTypingIndicator() {
            const chatContainer = document.getElementById('chatContainer');
            const typingDiv = document.createElement('div');
            typingDiv.id = 'typingIndicator';
            typingDiv.className = 'flex items-start space-x-3';
            typingDiv.innerHTML = `
                <div class="bot-avatar w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
                    </svg>
                </div>
                <div class="bg-white rounded-2xl rounded-tl-md px-4 py-3 shadow-sm border max-w-xs">
                    <div class="flex space-x-1">
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator" style="animation-delay: 0.2s;"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator" style="animation-delay: 0.4s;"></div>
                    </div>
                </div>
            `;
            chatContainer.appendChild(typingDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        // Remove typing indicator
        function removeTypingIndicator() {
            const typingIndicator = document.getElementById('typingIndicator');
            if (typingIndicator) {
                typingIndicator.remove();
            }
        }

        // Process user message
        function processMessage(userMessage) {
            addMessage(userMessage, true);
            
            showTypingIndicator();
            
            setTimeout(() => {
                removeTypingIndicator();
                
                const match = findBestMatch(userMessage);
                
                if (match) {
                    const confidence = Math.round(match.confidence * 100);
                    let response = match.faq.answer;
                    
                    if (confidence < 50) {
                        response = `I think you're asking about: "${match.faq.question}"\n\n${response}\n\nüí° If this doesn't answer your question, try rephrasing it or contact our support team!`;
                    }
                    
                    addMessage(response);
                    questionsAnswered++;
                    document.getElementById('questionsAnswered').textContent = questionsAnswered;
                } else {
                    const fallbackResponse = `I'm not sure about that specific question. Here are some things I can help you with:\n\n‚Ä¢ Shipping and delivery options\n‚Ä¢ Returns and refunds\n‚Ä¢ Payment methods\n‚Ä¢ Order tracking\n‚Ä¢ Account management\n\nTry asking about one of these topics, or contact our support team at support@nexp-chatbox.com for personalized help! üòä`;
                    addMessage(fallbackResponse);
                }
            }, 1500);
        }

        // Send message function
        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (message) {
                processMessage(message);
                input.value = '';
            }
        }

        // Handle enter key press
        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        // Quick question function
        function askQuickQuestion(question) {
            document.getElementById('messageInput').value = question;
            sendMessage();
        }

        // Update total questions count
        document.getElementById('totalQuestions').textContent = faqDatabase.length;

        // Floating chat messages
        const floatingMessages = [
