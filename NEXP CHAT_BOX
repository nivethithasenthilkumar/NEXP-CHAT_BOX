            { text: "Fast shipping! Impressed üöÄ", type: "whatsapp" },
            { text: "Great prices! üí∞", type: "instagram" },
            { text: "Excellent support team! üí™", type: "whatsapp" },
            { text: "Will definitely order again! üîÅ", type: "instagram" },
            { text: "Smooth checkout process! ‚ú®", type: "whatsapp" },
            { text: "Amazing deals today! üéâ", type: "instagram" },
            { text: "Quick response time! ‚ö°", type: "whatsapp" }
        ];

        function createFloatingChat() {
            const container = document.getElementById('floatingChats');
            const message = floatingMessages[Math.floor(Math.random() * floatingMessages.length)];
            
            const chatElement = document.createElement('div');
            chatElement.className = `floating-chat ${message.type}`;
            chatElement.textContent = message.text;
            
            chatElement.style.left = Math.random() * 100 + '%';
            chatElement.style.animationDelay = Math.random() * 2 + 's';
            
            container.appendChild(chatElement);
            
            setTimeout(() => {
                if (chatElement.parentNode) {
                    chatElement.parentNode.removeChild(chatElement);
                }
            }, 22000);
        }

        // Create floating chats at intervals
        setInterval(createFloatingChat, 800);
        
        // Create initial batch
        for (let i = 0; i < 5; i++) {
            setTimeout(createFloatingChat, i * 200);
        }
    </script>
